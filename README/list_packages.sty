\usepackage{fancyvrb} % For advanced verbatim typesetting
\usepackage{listings}
\lstdefinestyle{raml}{
	tabsize=2,
	numbers=none, %use numbers=left
	numbers=none,
	firstnumber=auto,
	numberstyle=\tiny,
	stepnumber=1,
	numbersep=5pt,
	basicstyle=\linespread{0.8}\tt\footnotesize,
	escapechar=\%,
	mathescape,
	language=CaML,
	columns=flexible,
	xleftmargin=0pt,
	xrightmargin=0pt,
	morekeywords={tick,stat},
	deletekeywords={},
	frame=none,
	literate={->}{$\rightarrow$}{3}
}

